<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.MenuController">
    <children>
        <Pane prefHeight="400.0" prefWidth="600.0">
            <children>
                <ImageView fx:id="background" fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
                <HBox alignment="CENTER" layoutY="151.0" prefHeight="47.0" prefWidth="600.0">
                    <children>
                        <Text onMouseClicked="#start" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: white;" text="START" textAlignment="CENTER" underline="true" wrappingWidth="150.0">
                            <font>
                                <Font name="MV Boli" size="29.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Text>
                        <Text onMouseClicked="#load" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: white;" text="LOAD" textAlignment="CENTER" underline="true" wrappingWidth="150.0">
                            <font>
                                <Font name="MV Boli" size="30.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Text>
                        <Text onMouseClicked="#quit" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: white;" text="QUIT" textAlignment="CENTER" underline="true" wrappingWidth="150.0">
                            <font>
                                <Font name="MV Boli" size="30.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Text>
                    </children>
                </HBox>
            </children>
        </Pane>
    </children>
</Pane>